---
import "@/styles/global.css";
import Navigation from "@/components/Navigation.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import MobileMenu from "@/components/MobileMenu.astro"; // Import the new component
import ParallaxTextOverlay from "@/components/ParallaxTextOverlay.astro";
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Layout</title>
    <style>
        /* Only keeping CSS that can't be easily converted to Tailwind */
        body {
            margin: 0;
            padding: 0;
            background-color: white;
        }
        .no-scroll {
            overflow: hidden;
        }
        [x-cloak] {
            display: none !important;
        }
    </style>
</head>
<body x-data="{ scrollPosition: 0, mobileMenuOpen: false }" @scroll.window="scrollPosition = window.scrollY" class="bg-white" :class="{ 'no-scroll': mobileMenuOpen }">
    <!-- Black background section with relative positioning -->
    <div class="relative bg-black w-full sm:pb-40 overflow-hidden">
        <ParallaxTextOverlay text="Some blog entry headline thats quite long"/>

        <Navigation />
        <Header 
          title="Some blog entry headline that's quite long" 
          date="March 15, 2024" 
          tags={["Design", "Web Development", "CSS", "JavaScript"]} 
        />
    </div>

    <MobileMenu />

    <!-- Content Box with responsive padding -->
    <div class="max-w-screen-md mx-auto bg-white text-black p-6 sm:p-20 -mt-5 sm:-mt-40 relative z-10">
