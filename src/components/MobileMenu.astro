---
// src/components/MobileMenu.astro
import LinkedInIcon from "@/components/LinkedInIcon.astro";
import GitHubIcon from "@/components/GitHubIcon.astro";
import CrossIcon from "@/components/CrossIcon.astro"; // Import the new CrossIcon component

import { Icon } from "astro-icon/components";

// This component relies on `mobileMenuOpen` being defined in an Alpine.js
// x-data context in its parent scope, typically on the <body> tag.
---

<div x-cloak x-show="mobileMenuOpen" class="fixed inset-0 bg-black z-50">
	<div class="px-6 sm:px-20 max-w-[740px] mx-auto">
		<!-- Mobile Menu Header with Close Button -->
		<div class="flex justify-between items-center py-5">
			<div class="text-2xl font-bold text-white">LOGO</div>
			<!-- Close Button in same position as hamburger -->
			<button
				class="text-white focus:outline-none"
				@click="mobileMenuOpen = false"
			>
				<Icon name="cross" size="24" />
			</button>
		</div>
	</div>

	<!-- Mobile Menu Links -->
	<div
		class="flex flex-col items-center justify-center h-[60vh] space-y-8 text-xl"
	>
		<a
			href="#"
			class="text-white hover:text-gray-300"
			@click="mobileMenuOpen = false">Blog</a
		>
		<a
			href="#"
			class="text-white hover:text-gray-300"
			@click="mobileMenuOpen = false">Snippets</a
		>
		<a
			href="#"
			class="text-white hover:text-gray-300"
			@click="mobileMenuOpen = false">Projects</a
		>

		<!-- Icons with spacing -->
		<div class="flex items-center space-x-6 mt-8">
			<a
				href="#"
				class="text-white hover:text-gray-300"
				@click="mobileMenuOpen = false"
			>
				<Icon name="linkedin" size="32" />
			</a>
			<a
				href="#"
				class="text-white hover:text-gray-300"
				@click="mobileMenuOpen = false"
			>
				<Icon name="github" size="32" />
			</a>
		</div>
	</div>
</div>
