---
// Footer.astro: Blog footer section
import LinkedInIcon from "@/components/LinkedInIcon.astro";
import GitHubIcon from "@/components/GitHubIcon.astro";
---
<footer class="bg-black text-white py-4 sm:py-10">
  <div class="flex justify-center px-8 sm:px-20">
    <div class="flex justify-between items-center w-full max-w-[740px]">
      <div class="text-lg font-bold">LOGO</div>
      <div class="flex space-x-4 sm:space-x-6 text-xs sm:text-sm">
        <a href="#" class="hover:text-gray-300">Blog</a>
        <a href="#" class="hover:text-gray-300">Snippets</a>
        <a href="#" class="hover:text-gray-300">Projects</a>
        <!-- Icons with spacing -->
        <div class="flex items-center space-x-3 ml-6">
          <a href="#" class="hover:text-gray-300">
            <LinkedInIcon size={16} />
          </a>
          <a href="#" class="hover:text-gray-300">
            <GitHubIcon size={16} />
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
